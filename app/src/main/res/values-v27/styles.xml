<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="fontFamily">@font/san_francisco_regular</item>
        <item name="android:textColorPrimary">@color/darkGrey</item>
        <item name="android:windowBackground">@color/veryVeryLightGrey</item>
        <!-- Material dialog -->
        <item name="md_color_button_text">@color/purple</item>
        <item name="md_corner_radius">@dimen/rounded_corners</item>
        <!-- Grey navigation bar-->
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/veryVeryLightGrey</item>
        <!-- Custom animation between activities -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
</resources>