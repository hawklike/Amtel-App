<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="android:textColorPrimary">@color/darkGrey</item>
        <item name="android:windowBackground">@color/veryLightGrey</item>
        <item name="android:statusBarColor">@color/green</item>
        <!-- Material dialog -->
        <item name="md_color_button_text">@color/blue</item>
        <item name="md_corner_radius">@dimen/rounded_corners</item>
        <!-- Custom animation between activities -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!-- Toolbar custom theme -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <!-- This sets a hamburger icon in a toolbar to blue color -->
        <item name="android:textColorSecondary">@color/darkBlue</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="CardRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginTop">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:background">@drawable/rounded_object</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:paddingStart">@dimen/common_padding</item>
        <item name="android:paddingEnd">@dimen/common_padding</item>
    </style>

    <!-- EditText custom theme -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_object</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <!-- Floating action button custom theme -->
    <style name="FloatingActionButton">
        <item name="backgroundTint">@color/green</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- TextInputEditText custom theme so that error background is transparent -->
    <style name="TextInputEditTextStyle" parent="EditTextStyle">
        <item name="android:background">@drawable/input_text_layout_selector</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <!-- Color of an error when max text limit is exceeded -->
    <style name="TextLimitError">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- Check box custom theme -->
    <style name="CheckBoxStyle">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/darkBlue</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>
    
    <style name="TextViewTitle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/darkBlue</item>
        <item name="tabSelectedTextColor">@color/darkBlue</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabMode">scrollable</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


</resources>

