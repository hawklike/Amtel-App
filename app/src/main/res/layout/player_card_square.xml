<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_card_square"
    style="@style/SimpleCardView"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginEnd="10dp"
    android:elevation="2dp"
    android:minWidth="100dp">

    <TextView
        android:id="@+id/player_card_square_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Jindrich"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/player_card_square_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/player_card_square_footer"
        android:layout_below="@id/player_card_square_name"
        android:layout_marginBottom="8dp"
        android:text="Sidlo"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/player_card_square_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="domaci"
        android:textColor="@color/blue"
        android:textSize="@dimen/common_text_size" />

</RelativeLayout>