<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/curve" />

        <RelativeLayout
            android:id="@+id/team_info_overview"
            style="@style/CardRelativeLayout"
            android:padding="8dp">

            <TextView
                android:id="@+id/team_info_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TK Horní Bludovice"
                android:textColor="@color/darkGrey"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/team_info_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_info_home"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/team_info_rank"
                android:text="skupina A"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/team_info_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_info_away"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Adresa kurtu: U Horní Lípy 12"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/team_info_teamManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_info_place"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Kontakt: Tomáš Suchý"
                android:textColor="@color/darkGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/team_info_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:layout_marginEnd="16dp"
                android:text="1."
                android:textColor="@color/blue"
                android:textSize="36sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/team_info_charts_title"
            style="@style/TextViewTitleLeft"
            android:layout_below="@id/team_info_overview"
            android:text="@string/statistics" />

        <HorizontalScrollView
            android:id="@+id/team_info_charts"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_info_charts_title">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/team_info_chart_matches"
                    android:layout_width="160dp"
                    android:layout_height="160dp"/>

            </RelativeLayout>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/team_info_title_teams"
            style="@style/TextViewTitleLeft"
            android:layout_below="@id/team_info_charts"
            android:text="@string/matches" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/team_info_matches_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_below="@id/team_info_title_teams"/>

        <TextView
            android:id="@+id/team_info_title_players"
            style="@style/TextViewTitleLeft"
            android:layout_below="@id/team_info_matches_recyclerView"
            android:text="@string/players" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/team_info_players_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_below="@id/team_info_title_players"/>

    </RelativeLayout>

</RelativeLayout>