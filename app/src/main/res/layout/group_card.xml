<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_object">

    <Button
        android:id="@+id/group_card_generate"
        android:minHeight="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:elevation="0dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_plan"
        android:textSize="13sp"
        android:textColor="@color/blue"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/group_card_next"
        android:background="@drawable/ic_navigate_next_blue_24dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:contentDescription="@string/show_group" />

    <TextView
        android:id="@+id/group_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/group_card_generate"
        android:text="A"
        android:textColor="@color/darkGrey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/group_card_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_below="@id/group_card_name"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/group_card_generate"
        android:text="Počet týmů: 12"
        android:textColor="@color/darkGrey"
        android:textSize="12sp" />

</RelativeLayout>