<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SimpleCardView">

    <ImageView
        android:id="@+id/team_card_add"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit_blue_24dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/team_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/team_card_add"
        android:text="TK HornÃ­ Bludovice"
        android:textColor="@color/darkGrey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/team_card_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="bez skupiny"
        android:layout_below="@id/team_card_name"
        android:layout_marginEnd="16dp"
        android:textColor="@color/darkGrey"
        android:textSize="13sp" />

</RelativeLayout>